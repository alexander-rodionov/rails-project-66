doctype html
html
  head
    meta[http-equiv="Content-Type" content="text/html; charset=utf-8"]
    style[type="text/css"]
      |
        body, p, h1, h2, h3, h4, h5, h6 {
          margin: 0;
          padding: 0;
        }
        body {
          font-family: Arial, Helvetica, sans-serif;
          line-height: 1.4;
          color: #333333;
          background-color: #f4f4f4;
          padding: 20px 0;
        }
        .container {
          max-width: 80%;
          margin: 0 auto;
          background: #ffffff;
        }
        .header {
          padding: 20px;
          background: #2c3e50;
          color: white;
        }
        .content {
          padding: 20px;
        }
        table {
          width: 100%;
          border-collapse: collapse;
          margin: 15px 0;
        }
        th {
          background-color: #f8f8f8;
          text-align: left;
          padding: 10px;
          border-bottom: 2px solid #dddddd;
          font-weight: bold;
        }
        td {
          padding: 10px;
          border-bottom: 1px solid #dddddd;
          vertical-align: top;
        }
        tr:last-child td {
          border-bottom: none;
        }
        tr:nth-child(even) {
          background-color: #f9f9f9;
        }
        .btn {
          display: inline-block;
          padding: 10px 20px;
          background: #3498db;
          color: white !important;
          text-decoration: none;
          border-radius: 3px;
          font-weight: bold;
        }
        .footer {
          padding: 20px;
          font-size: 12px;
          color: #777777;
          border-top: 1px solid #eeeeee;
        }
        @media screen and (max-width: 1000px) {
          .container {
            width: 100% !important;
          }
          table {
            display: block;
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
          }
        }
  body
